indicator-thickness=7
effect-blur=7x5
effect-vignette=0.5:0.5

# == ЦВЕТА MELANCHOLY ==
# Bg (если скриншот не сработает)
color=1a1c23

# Кольцо (основное) - Blue #7a8ca3
ring-color=7a8ca3
key-hl-color=8da18d  # Green (при нажатии)

# Внутри кольца
inside-color=1a1c23  # Dark Grey (фон)
line-color=1a1c23    # Скрываем линию разделения

# Текст
text-color=aab1be      # FG
layout-text-color=aab1be

# Ошибки (Неверный пароль) - Red #b07b7b
ring-wrong-color=b07b7b
