[
  {
    "context": "Workspace",
    "bindings": {},
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore",
    },
  },

  {
    "context": "Editor",
    "bindings": {
      "ctrl-j": "terminal_panel::ToggleFocus",
      "ctrl-h": "project_panel::ToggleFocus",
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-k": "workspace::ActivatePaneUp",
    },
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "ctrl-k": "workspace::ActivatePaneRight",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-t ctrl-h": "editor::ToggleInlayHints",
    },
  },
]
